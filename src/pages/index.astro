---
import BaseLayout from '../layouts/BaseLayout.astro'
import { SITE_BASE, SocialLinks } from '../consts'
import { Icon } from 'astro-icon/components'
import BlogCard from '../components/BlogCard.astro'
import { getCollection } from 'astro:content'

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 4)
---

<BaseLayout>
	<main
		class="app-container flex flex-col gap-12 justify-center py-36 md:py-48 pt-44 md:pt-56 relative"
	>
		<div>
			<p class="block text-3xl opacity-70 mt-9 mb-4">Welcome to</p>
			<h1 class="text-8xl font-bold leading-none">mirzu.com</h1>
			<a
				href={`${SITE_BASE}/index-md`}
				id="robot-link"
				class="text-lg opacity-70 hover:opacity-100 underline underline-offset-4 mt-4 inline-block"
				>Just kidding, I'm a robot.</a
			>
		</div>
		<p class="text-2xl max-w-2xl font-light leading-normal">
			I'm Michal Minecki, and this is my website.
		</p>
		<p class="text-2xl max-w-2xl font-light leading-normal">
			I help Agencies deliver their best work, and I build content management
			systems.
		</p>
		<p class="text-2xl max-w-2xl font-light leading-normal">
			In my spare time I make things and foster dogs.
		</p>
		<div class="flex flex-wrap gap-8">
			{
				SocialLinks.map((link) => (
					<a
						class="text-xl text-primary dark:text-primary-dark underline hover:underline underline-offset-4"
						href={link.url}
						target="_blank"
					>
						{link.name}
					</a>
				))
			}
		</div>
	</main>

	<!-- Recent Posts Section -->
	<section class="app-container">
		<h2 class="section-title">Recent Posts</h2>
		<div class="posts-grid-container">
			{posts.map((post) => <BlogCard post={post} />)}
		</div>
		<a class="btn-secondary" href={`${SITE_BASE}/blog`}
			>Read All
			<Icon size={20} name="mdi:arrow-right" />
		</a>
	</section>

	<!-- Recent Posts Section -->
	<section class="app-container py-42 grid lg:grid-cols-2 gap-28 lg:gap-10">
		<div class="space-y-6">
			<h2 class="section-title">About Me</h2>
			<p class="text-lg max-w-xl pb-4">
				I've spent my whole life in the intersection between engineering and
				art. For the past 20 years I've been building websites for forward
				thinking organizations. In my spare time I make things.
			</p>
			<a class="btn-secondary" href={`${SITE_BASE}/about`}
				>Go to About
				<Icon size={20} name="mdi:arrow-right" />
			</a>
		</div>
		<div class="space-y-6">
			<h2 class="section-title">Get in touch</h2>
			<p class="text-lg max-w-xl">
				Use the buttons below for my resume & email.
			</p>
			<div class="flex flex-wrap mt-auto space-x-4">
				<a
					class="btn-primary"
					href="mailto:contact@mirzu.com"
					download
					target="_blank"
					>Get in touch
					<Icon height={20} name="mdi:email" />
				</a>
				<a class="btn-primary" href={`${SITE_BASE}/resume`} target="_blank"
					>view Resume
					<Icon height={20} name="mdi:file-document-outline" />
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
