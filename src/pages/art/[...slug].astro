---
import { type CollectionEntry, getCollection } from 'astro:content'
import ArtPostLayout from '../../layouts/ArtPostLayout.astro'
import type { MarkdownHeading } from 'astro'

export async function getStaticPaths() {
	const posts = await getCollection('art')
	const headings = await Promise.all(
		posts.map(async (post) => {
			const data = await post.render()
			return data.headings
		})
	)
	return posts.map((post, index) => ({
		params: { slug: post.slug },
		props: { post, headings: headings[index], slug: post.slug },
	}))
}

type Props = {
	post: CollectionEntry<'art'>
	headings: MarkdownHeading[]
	slug: string
}

const { post, headings, slug } = Astro.props
const { Content, remarkPluginFrontmatter } = await post.render()
---

<ArtPostLayout
	{...post.data}
	headings={headings}
	slug={slug}
	remarkPluginFrontmatter={remarkPluginFrontmatter}
>
	<Content />
</ArtPostLayout>
