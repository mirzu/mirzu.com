---
import { type CollectionEntry, getCollection, render } from 'astro:content'
import ArtPostLayout from '../../layouts/ArtPostLayout.astro'
import type { MarkdownHeading } from 'astro'

export async function getStaticPaths() {
	const posts = await getCollection('art')
	const rendered = await Promise.all(
		posts.map(async (post) => {
			const data = await render(post)
			return data
		})
	)
	return posts.map((post, index) => ({
		params: { slug: post.id },
		props: { post, headings: rendered[index].headings, slug: post.id },
	}))
}

type Props = {
	post: CollectionEntry<'art'>
	headings: MarkdownHeading[]
	slug: string
}

const { post, headings, slug } = Astro.props
const { Content, remarkPluginFrontmatter } = await render(post)
---

<ArtPostLayout
	{...post.data}
	headings={headings}
	slug={slug}
	remarkPluginFrontmatter={remarkPluginFrontmatter}
>
	<Content />
</ArtPostLayout>
